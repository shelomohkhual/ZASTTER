
<div class="card shadow-sm" style="">
<div class="card-body" style="width:100%;">

    <div>
        <form action="/tweet" method="POST" >
            <input type="text" name="tweet" placeholder="What's Happening" maxlength="140">
            <button style="width:100%;" type="submit" value="tweet" class="button">Tweet</button>
        </form>
    </div>
</div>
</div>

<%# NEWFEED  %>
<hr>
<div class="newfeed">
        <%# one tweet %>
        <%@tweets.each do |tweet| %>

        <div class="tweet">
            <div class="card shadow-sm" style="">
                <div class="card-body" style="width:100%;">
                    <h5 class="card-title"><a href="/ tweet.user_id.user_name "><%=@user.name%> </a></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><a href="/ tweet.user_id.user_name "></a>@<%=@user.nickname%></a></h6>
                    <p class="card-text"><%=tweet.text%></p>
                    <hr>
                    
                    <div class="tweet-actions" style="text-align:center;">
                        <!-- Button trigger reply modal -->
                        <button  class="btn" data-toggle="modal" data-target="#exampleModalCenter">
                             <a href="#" class="card-link"><i class="far fa-comment-dots">5</i></a>
                        </button>

                    <!-- Reply Modal -->
                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Reply to <%=@user.name%></h5>
                            <button class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="comment">Replying to <%=@user.nickname%>  </label>
                                    <textarea class="form-control" rows="3" id="comment" placeholder="Tweet your reply"></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="Submit" class="btn btn-primary">Reply</button>
                        </div>
                        </div>
                    </div>
                    </div>

                        <!-- Button trigger Retweet modal -->
                        <button class="btn" data-toggle="modal" data-target="#retweet">
                             <a href="#" class="card-link">4<i class="fas fa-retweet"></i></a>
                        </button>

                            <!-- Retweet Modal -->
                    <div class="modal fade" id="retweet" tabindex="-1" role="dialog" aria-labelledby="retweetTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Retweet this to your followers?</h5>
                            <button class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                 <textarea class="form-control" rows="1" id="comment" placeholder="Tweet your reply"></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary">Retweet</button>
                        </div>
                        </div>
                                                    
                    </div>
                    
                    </div>
                            <button type="submit" value="reply" class="btn"><a href="#" class="card-link"> <i class="fas fa-heart">1</i></a></button>

                                    </div>
                                </div>
                            </div>
                        </div>
        <% end %>
    
</div>







