    <div class="container register-form">

        <form method="POST" action="/sessions">
            <div class="note">
                <p>Sign up form</p>
            </div>

            <div class="form-content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Your Name *"  name="name"/>
                            <label for="name_error"><%=@name_error%></label>   
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Your Nick Name*"  name="nickname" />
                            <label for="nickname_error"><%=@nickname_error%></label>   
                        </div>
                    </div>  
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Your Email*" name="email" />
                            <label for="email_error"><%=@email_error%></label>   
                        </div>
                    </div>  
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Password *"  name="password"/>
                        </div>
                    </div>
                    <input class="btn btn-sm btn-primary btn-radius" type="submit" value= "Sign Up"> 
            </div>
            </div>
        </form>
    </div>


    